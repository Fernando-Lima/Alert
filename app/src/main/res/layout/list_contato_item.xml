<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:layout_height="match_parent">


    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#262626"
        android:id="@+id/list_item_contato_tv_nome" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="37dp"
        android:layout_marginEnd="37dp"
        android:textSize="18sp"
        android:id="@+id/list_item_contato_tv_principal"
        android:layout_alignParentTop="true" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lint_item_contato_tv_telefone"
        android:layout_below="@+id/list_item_contato_tv_nome"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#262626"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:text="enviar localização"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_item_contato_tv_local"
        android:layout_alignBaseline="@+id/lint_item_contato_tv_telefone"
        android:layout_alignBottom="@+id/lint_item_contato_tv_telefone"
        android:layout_alignRight="@+id/list_item_contato_tv_principal"
        android:layout_alignEnd="@+id/list_item_contato_tv_principal" />

</RelativeLayout>